section.footer
  color: #FFFFFF
  background-image: linear-gradient(-179deg, #1673B5 2%, #146BB3 100%)

  .content
    text-align: center
    
    img, h3
      margin: 2rem 0
      
    img
      @media(max-width: $screen-xxs)
        width: 100%
        max-width: 270px
    
    h3
      font-family: HelveticaNeue-Thin
    
  .bottom-nav
    position: relative
    margin: 3rem 0
    text-align: center
    
    img
      margin: 0
      vertical-align: text-bottom
    
    a
      font-family: HelveticaNeue-Thin
      color: white
      font-size: 14px
      line-height: 1em
      text-decoration: none